<div class="team-title text-center"><h1>Our Team</h1></div>

  <div class="team-members">
    <ul class="list-inline text-center">
      <% ["anne", "seb", "romain"].each do |member| %>
      <li>
        <h3><%= member.capitalize %></h3>
        <%= image_tag "#{member}.png", class: "img-circle", height: "100px" %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="team-email-link text-center">
    <h3 class="padded">
      <a href="mailto:contact@airbnb.com">
        <i class="fa fa-envelope"></i> contact@airbnb.com
      </a>
    </h3>
  </div>
